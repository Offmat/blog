
<h1>Article</h1>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<p>
  <strong>Author:</strong>
  <%= @article.author.email %>
</p>
<br>



<h3>Comments</h3>

<% @article.comments.each do |comment| %>
  <%= render 'comments/comment', comment: comment %>
<% end %>


<%= render 'comments/form' %>


<p>
  <%= link_to 'Back', articles_path %>
</p>
