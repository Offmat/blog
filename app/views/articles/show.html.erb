<h1>
  Article
</h1>

<p>
  <strong>Title:</strond>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strond>
  <%= @article.text %>
</p>
<%= form_for(@article.comments.build) do |f| %>
  <%= f.hidden_field :article_id %>
  <p>
    <%= f.label :commenter %>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p>
  <%= link_to 'Back', articles_path %>
</p>
