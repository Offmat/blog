<h1>List Of Articles</h1>
  <div class="list-group">

    <%= form_tag articles_path, method: :get do %>
      <div class="input-group">
        <%= text_field_tag :q, params[:q], class: "form-control" %>
        <span class="input-group-btn">
          <%= submit_tag "Search", class: "btn btn-default" %>
        </span>
      </div>
    <% end %>

    <% @articles.each do |article| %>
      <div class="list-group-item">
        <h2 class="list-group-item-heading" ><%= article.title %></h2>
        <p class="list-group-item-text" ><%= article.text %></p>
        <p class="list-group-item-text text-info" >Tags:
          <% article.tags.each do |tag| %>
            #<%= tag %>
          <% end %>
        </p>
        <p class="list-group-item-text" >
          <%= link_to 'Show', article, class: "btn btn-primary btn-sm" %>
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Destroy', article_path(article), class: "btn btn-danger btn-md" ,
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
        </p>
      </div>

    <% end %>
  </div>
<p><%= link_to 'New article', new_article_path %></p>
